@inherits FieldQueryComponent<StringFieldQuery>

<BSRow>
	<BSCol>
		<BSInput InputType="InputType.Text" class="form-control" @bind-Value="@Query.Pattern" />
	</BSCol>
	<BSCol LG="auto">
		<BSDropdown>
			<BSDropdownToggle Color="@Color.Light">@Query.Type</BSDropdownToggle>
			<BSDropdownMenu>
				@foreach(var value in Enum.GetValues(typeof(StringFieldQueryType)))
				{
					<BSDropdownItem @onclick="e => { Query.Type = (StringFieldQueryType)value; }">@value</BSDropdownItem>
				}
			</BSDropdownMenu>
		</BSDropdown>
	</BSCol>		
</BSRow>

