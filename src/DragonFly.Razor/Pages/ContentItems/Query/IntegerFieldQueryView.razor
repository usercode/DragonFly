@inherits QueryComponent<IntegerQuery>

<BSListGroup>
	<BSListGroupItem>
		 <BSFormGroup>
			<BSLabel class="form-label badge bg-secondary">@Query.FieldName </BSLabel>
			<BSRow>
				<BSCol LG="4">
					<BSLabel class="form-label">Min value</BSLabel>
				</BSCol>
				<BSCol>
					 <BSInput InputType="InputType.Number"              
											 @bind-Value="@Query.MinValue"
											 class="form-control" 
											  />
				</BSCol>
		
			</BSRow>
			</BSFormGroup>
			<BSFormGroup>
			<BSRow>
				<BSCol LG="4">
					<BSLabel class="form-label">Max value</BSLabel>
				</BSCol>
				<BSCol>
					 <BSInput InputType="InputType.Number"              
											 @bind-Value="@Query.MaxValue"
											 class="form-control" 
											  />
				</BSCol>
			</BSRow>
		</BSFormGroup>
	</BSListGroupItem>
</BSListGroup>

