@inherits QueryComponent<ReferenceQuery>

<BSListGroup>
	<BSListGroupItem>
		<BSFormGroup>
			<BSLabel class="form-label badge bg-secondary">@Query.FieldName</BSLabel>
			<BSRow>
				<BSCol>
					<ReferenceSelector @bind-ContentItem="ContentItem" />
				</BSCol>
				<BSCol LG="auto">
					
				</BSCol>		
			</BSRow>
		</BSFormGroup>
	</BSListGroupItem>
</BSListGroup>

@code {

	private ContentItem _contentItem;

	public ContentItem ContentItem 
	{
		get => _contentItem;
		set
		{
			_contentItem = value;

			Query.ContentItemId = _contentItem?.Id;
		}
	}
}
