@inherits ContentItemTypeListBase2

@if (SearchResult == null)
{
    <p><em>Loading...</em></p>
}
else
{
<BSRow>
    <BSCol LG="3">
        <BSListGroup>
            @foreach (ContentSchema schema in SearchResult.Items)
            {
                <a class="list-group-item list-group-item-action @(SelectedItem == schema ? "active" : "")" @onclick="() => RefreshContentItemsAsync(schema)" style="cursor:pointer">
                    <span class="oi oi-list-rich"></span> @schema.Name
                </a>
            }
        </BSListGroup>
    </BSCol>
    <BSCol LG="9">
        @if (SelectedItem != null)
        {
        <ContentItemList @ref="ContentItemList" ListMode="EntityListMode.Single" EntityType="@SelectedItem.Name" ItemSelected="x => SetResult(x)" />
        }
    </BSCol>
</BSRow>
}
