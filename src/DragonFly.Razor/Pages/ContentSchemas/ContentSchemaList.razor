@page "/schema"
@inherits ContentSchemaListBase

<div class="contentschema-list">
    <BSRow>
        <div class="col-lg-12">
            <a href="schema/create" class="btn btn-success">Create</a>
        </div>
    </BSRow>

    <hr />

    @if (SearchResult == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="list-group">

            @foreach (ContentSchema schema in SearchResult.Items)
            {
                <a class="list-group-item list-group-item-action" href="schema/@schema.Id">
                    <span class="oi oi-list-rich"></span> @schema.Name
                </a>
            }

        </div>
    }
</div>