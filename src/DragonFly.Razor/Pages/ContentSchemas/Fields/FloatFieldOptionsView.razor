
<div class="card">
    <div class="card-body">
        <div class="card-title">

        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Required</label>
            <div class="col-sm-8">
                <CheckBoxView @bind-Value="@Options.IsRequired" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Default value</label>
            <div class="col-sm-8">
                <input type="number" step="0.01" class="form-control" @bind-value="@Options.DefaultValue" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Min value</label>
            <div class="col-sm-8">
                <input type="number" step="0.01" class="form-control" @bind-value="@Options.MinValue" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Max value</label>
            <div class="col-sm-8">
                <input type="number" step="0.01" class="form-control" @bind-value="@Options.MaxValue" />
            </div>
        </div>
    </div>
    </div>

@code {
    [Parameter]
    public FloatFieldOptions Options { get; set; }
}