@inherits AssetMetadataComponent<ImageMetadata>

<div class="form-group">
    <BSRow>
        <BSLabel class="col-sm-2 col-form-label">
            Width
        </BSLabel>
        <div class="col-sm-10">
             <input type="text" class="form-control" @bind-value="@Metadata.Width" readonly />
        </div>
    </BSRow>
</div>

<div class="form-group">
    <BSRow>
        <BSLabel class="col-sm-2 col-form-label">
            Height
        </BSLabel>
        <div class="col-sm-10">
            <input type="text" class="form-control" @bind-value="@Metadata.Height" readonly />
        </div>
    </BSRow>
</div>

<div class="form-group">
    <BSRow>
        <BSLabel class="col-sm-2 col-form-label">
            Bits per pixel
        </BSLabel>
        <div class="col-sm-10">
            <input type="text" class="form-control" @bind-value="@Metadata.BitsPerPixel" readonly />
        </div>
    </BSRow>
</div>
