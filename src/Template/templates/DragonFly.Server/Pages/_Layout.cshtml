@model BasePageModel
@inject IWebHostEnvironment Environment

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@Model.PageTitle</title>
    <link rel="icon" href="favicon.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/prismjs/themes/prism.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/style.min.css" asp-append-version="true">
    <script src="~/lib/prismjs/prism.js" defer asp-append-version="true"></script>
    <script src="~/lib/prismjs/components/prism-c.js" defer asp-append-version="true"></script>
    <script src="~/lib/prismjs/components/prism-csharp.js" defer asp-append-version="true"></script>
    <script src="~/lib/prismjs/components/prism-hlsl.js" defer asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js" defer asp-append-version="true"></script>

    @RenderSection("head", required: false)
</head>
<body>
    <header>
        <div class="container">
            <div class="items">
                <partial name="_Menu.cshtml" />

                @*<img src="#" class="logo">*@

            </div>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div class="container">
            <div class="footer-links">
                <span>Copyright &copy; @DateTime.Today.Year</span>
            </div>
        </div>
    </footer>

    @RenderSection("script", required: false)

</body>
</html>