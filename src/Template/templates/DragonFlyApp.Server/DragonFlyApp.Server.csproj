<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>true</ImplicitUsings>
  </PropertyGroup>
  
  <ItemGroup>
    <Content Remove="compilerconfig.json" />
    <Content Remove="libman.json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="compilerconfig.json" />
    <None Include="libman.json" />
  </ItemGroup>  

  <ItemGroup>
    <PackageReference Include="DragonFly.API" Version="1.0.35" />
    <PackageReference Include="DragonFly.Assets.ImageSharp" Version="1.0.35" />
    <PackageReference Include="DragonFly.Assets.Pdf" Version="1.0.35" />
    <PackageReference Include="DragonFly.ImageWizard" Version="1.0.35" />
    <PackageReference Include="DragonFly.MongoDB" Version="1.0.35" />
    <PackageReference Include="DragonFly.Identity" Version="1.0.35" />
    <PackageReference Include="DragonFly.ApiKeys" Version="1.0.35" />
    <PackageReference Include="DragonFly.AspNetCore" Version="1.0.35" />
    <PackageReference Include="DragonFly.AspNetCore.WebAssembly" Version="1.0.35" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DragonFly.Generator" Version="1.0.35">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\DragonFlyApp.Client\DragonFlyApp.Client.csproj" />
    <ProjectReference Include="..\DragonFlyApp.Shared\DragonFlyApp.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.22.1" />
    <PackageReference Include="Microsoft.Web.LibraryManager.Build" Version="2.1.175" PrivateAssets="All" />
  </ItemGroup>
  
</Project>
