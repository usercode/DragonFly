@page "/settings/identity/role/{EntityId:guid}"
@inherits RoleDetailBase

@if (Entity != null)
{
    <div class="role-detail">

        <div style="flex: 0">
            <h1>User</h1>

            <Toolbar Items="ToolbarItems"></Toolbar>
        </div>
        <div class="scroll-content" style="flex:1">
            <EditForm Model="Entity">
                <div>
                    <div class="col-md-6">

                        <!-- id -->
                        <BSRow class="form-group">
                            <label class="col-sm-2 col-form-label">Id</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" @bind-value="@Entity.Id" readonly />
                            </div>
                        </BSRow>

                        <!-- name -->
                        <BSRow class="form-group">
                            <label class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" @bind-value="@Entity.Name" />
                            </div>
                        </BSRow>

                        <BSRow class="form-group">
                                <label class="col-sm-2 col-form-label">Permissions</label>
                                <div class="col-sm-10">
                                       @* @foreach(var role in Permissions)
                                        {
                                            <div class="form-check">
                                                 <input id="checkRole" type="checkbox" class="form-check-input" value="" @bind="role.IsSelected" />
                                            
                                            <label class="form-check-label" for="checkRole">
                                                @role.Object.Name
                                                </label>
                                            </div>
                                        }              *@                      
                                </div>                                
                        </BSRow>
                        
                    </div>
                 </div>
          </EditForm>
