@inherits BlockComponent<CardBlock>

<div class="block card-block">
    <div class="input-group mb-3">
        <span class="input-group-text">Title</span>
        <input type="text" class="form-control" @bind-value="@Block.Title" />
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text">Header</span>
        <input type="text" class="form-control" @bind-value="@Block.Header" />
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text">Footer</span>
        <input type="text" class="form-control" @bind-value="@Block.Footer" />
    </div>

    <BlocksView Blocks="Block.Blocks" />
</div>
