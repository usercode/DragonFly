@inherits BlockComponent<HeadingBlock>

<div class="block heading-block">
    <div class="input-group">
        <EnumView TEnum="HeadingType" @bind-EnumValue="@Block.HeadingType" IsReadOnly="Field.IsReadOnly" />
        <EnumView TEnum="TextAlignment?" @bind-EnumValue="@Block.TextAlignment" IsReadOnly="Field.IsReadOnly" />
        <BSInput class="form-control" @bind-Value="@Block.Text" IsReadonly="Field.IsReadOnly" />
    </div>
</div>

@code {
    [CascadingParameter]
    public FieldComponent<BlockField> Field { get; set; }
}