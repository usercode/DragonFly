@inherits BlockComponent<SourceCodeBlock>

<BSDropdown style="margin-bottom: 1rem">
    <Toggler><BSToggle IsButton="true" Color="BSColor.Secondary" Size="Size.Small">@Block.SourceCodeType</BSToggle></Toggler>
    <Content>
        @foreach(var value in Enum.GetValues<SourceCodeType>())
            {
            <BSDropdownItem @onclick="e => Block.SourceCodeType = value">@value</BSDropdownItem>
            }        
    </Content>
</BSDropdown>

<textarea class="form-control" @bind="@Block.SourceCode" style="width:100%; height:40rem" />

