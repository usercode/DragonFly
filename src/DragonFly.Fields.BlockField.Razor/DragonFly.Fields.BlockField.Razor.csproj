<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
	  <TargetFramework>net6.0</TargetFramework>
	  <Authors>usercode</Authors>
	  <PackageProjectUrl>https://github.com/usercode/DragonFly</PackageProjectUrl>
	  <Description>Headless CMS based on ASP.NET Core and Blazor</Description>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <Version>0.2.1</Version>
	  <PublishRepositoryUrl>true</PublishRepositoryUrl>
	  <PackageIcon>logo.png</PackageIcon>
	  <PackageTags>cms</PackageTags>
	  <IncludeSymbols>true</IncludeSymbols>
	  <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.0" PrivateAssets="All" />
	</ItemGroup>
	
	<ItemGroup>
		<None Include="..\logo.png" Pack="true" PackagePath="" />
	</ItemGroup>

   <ItemGroup>
     <Content Remove="wwwroot\styles.css" />
   </ItemGroup>

	<ItemGroup>
		<PackageReference Include="TinyMCE.Blazor" Version="0.0.8" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\DragonFly.Fields.BlockField\DragonFly.Fields.BlockField.csproj" />
	  <ProjectReference Include="..\DragonFly.Razor\DragonFly.Razor.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Services\" />
	</ItemGroup>

	<ItemGroup>
	  <None Include="wwwroot\styles.css" />
	</ItemGroup>
	
</Project>
