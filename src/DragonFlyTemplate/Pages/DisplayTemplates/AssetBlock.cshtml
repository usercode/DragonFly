@model AssetBlock
@inject IAssetStorage Storage

@if (Model.AssetId != null)
{
    Asset asset = await Storage.GetAssetAsync(Model.AssetId.Value);

    <div class="block asset-block">
        @if(asset.IsSVG())
        {
            <img src="@Url.ImageWizard().Asset(asset).AsSvg().BuildUrl()">
        }
        else if (asset.IsImage())
        {
            <img src="@Url.ImageWizard().Asset(asset).AsImage().Resize(1200,900).BuildUrl()">
        }
        else if(asset.IsPdf())
        {
            <img src="@Url.ImageWizard().Asset(asset).AsPdf().PageToImage(0).BuildUrl()">
        }
    </div>
}