@inherits AssetMetadataComponent<ImageMetadata>

<div class="form-group">
    <BSRow>
        <BSLabel class="col-sm-2 col-form-label">
            Width
        </BSLabel>
        <div class="col-sm-10">
            <BSInput InputType="InputType.Text" Value="@Metadata.Width" IsReadonly="true" />
        </div>
    </BSRow>
</div>

<div class="form-group">
    <BSRow>
        <BSLabel class="col-sm-2 col-form-label">
            Height
        </BSLabel>
        <div class="col-sm-10">
            <BSInput InputType="InputType.Text" Value="@Metadata.Height" IsReadonly="true" />
        </div>
    </BSRow>
</div>

<div class="form-group">
    <BSRow>
        <BSLabel class="col-sm-2 col-form-label">
            Bits per pixel
        </BSLabel>
        <div class="col-sm-10">
            <BSInput InputType="InputType.Text" Value="@Metadata.BitsPerPixel" IsReadonly="true" />
        </div>
    </BSRow>
</div>
