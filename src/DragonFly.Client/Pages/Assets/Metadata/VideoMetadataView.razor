@inherits AssetMetadataComponent<VideoMetadata>

<div class="form-group">
    <BSRow>
        <BSLabel class="col-sm-2 col-form-label">
            Format
        </BSLabel>
        <div class="col-sm-10">
            <FluentTextField Value="@Metadata.FormatName" ReadOnly="true" Appearance="FluentInputAppearance.Filled" />
        </div>
    </BSRow>
</div>

<div class="form-group">
    <BSRow>
        <BSLabel class="col-sm-2 col-form-label">
            Duration
        </BSLabel>
        <div class="col-sm-10">
            <FluentTextField Value="@Metadata.Duration?.ToString()" ReadOnly="true" Appearance="FluentInputAppearance.Filled" />
        </div>
    </BSRow>
</div>

@if (Metadata.VideoInfo != null)
{
    <h4>Primary video stream</h4>
    <div class="form-group">
        <BSRow>
            <BSLabel class="col-sm-2 col-form-label">
                Codec
            </BSLabel>
            <div class="col-sm-10">
                <FluentTextField Value="@Metadata.VideoInfo.Codec" ReadOnly="true" Appearance="FluentInputAppearance.Filled" />
            </div>
        </BSRow>
    </div>   

    <div class="form-group">
        <BSRow>
            <BSLabel class="col-sm-2 col-form-label">
                Width
            </BSLabel>
            <div class="col-sm-10">
                <FluentTextField Value="@Metadata.VideoInfo.Width?.ToString()" ReadOnly="true" Appearance="FluentInputAppearance.Filled" />
            </div>
        </BSRow>
    </div>

    <div class="form-group">
        <BSRow>
            <BSLabel class="col-sm-2 col-form-label">
                Height
            </BSLabel>
            <div class="col-sm-10">
                <FluentTextField Value="@Metadata.VideoInfo.Height?.ToString()" ReadOnly="true" Appearance="FluentInputAppearance.Filled" />
            </div>
        </BSRow>
    </div>

    <div class="form-group">
        <BSRow>
            <BSLabel class="col-sm-2 col-form-label">
                FPS
            </BSLabel>
            <div class="col-sm-10">
                <FluentTextField Value="@Metadata.VideoInfo.Fps?.ToString()" ReadOnly="true" Appearance="FluentInputAppearance.Filled" />
            </div>
        </BSRow>
    </div>
}

@if (Metadata.AudioInfo != null)
{
    <h4>Primary audio stream</h4>
    <div class="form-group">
        <BSRow>
            <BSLabel class="col-sm-2 col-form-label">
                Codec
            </BSLabel>
            <div class="col-sm-10">
                <FluentTextField Value="@Metadata.AudioInfo.Codec" ReadOnly="true" Appearance="FluentInputAppearance.Filled" />
            </div>
        </BSRow>
    </div>

    <div class="form-group">
        <BSRow>
            <BSLabel class="col-sm-2 col-form-label">
                Channel layout
            </BSLabel>
            <div class="col-sm-10">
                <FluentTextField Value="@Metadata.AudioInfo.ChannelLayout" ReadOnly="true" Appearance="FluentInputAppearance.Filled" />
            </div>
        </BSRow>
    </div>

    <div class="form-group">
        <BSRow>
            <BSLabel class="col-sm-2 col-form-label">
                Channels
            </BSLabel>
            <div class="col-sm-10">
                <FluentTextField Value="@Metadata.AudioInfo.Channels?.ToString()" ReadOnly="true" Appearance="FluentInputAppearance.Filled" />
            </div>
        </BSRow>
    </div>
}