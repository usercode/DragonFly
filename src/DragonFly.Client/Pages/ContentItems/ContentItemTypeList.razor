@page "/content"
@inherits ContentSchemaList
@rendermode DragonFlyRenderMode.Current

<div class="scroll-content">
    @if (SearchResult == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <FluentNavMenu>
            @foreach (ContentSchema schema in SearchResult.Items.OrderBy(x => x.Name))
            {
                <FluentNavLink OnClick="x => OpenItem(schema)" Icon="new Icons.Filled.Size16.List()">
                    @schema.Name
                </FluentNavLink>
            }
        </FluentNavMenu>
    }
</div>