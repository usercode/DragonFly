@inherits FieldQueryComponent<FloatFieldQuery>

<BSRow>
    <BSCol>
        <input type="number" step="1" class="form-control" @bind-value="@Query.Value" />
    </BSCol>
    <BSCol ColumnLarge="auto">
        <BSDropdown>
            <Toggler>
                <BSToggle IsButton Color="@BSColor.Light">@Query.Type</BSToggle>
             </Toggler>
             <Content>
                 @foreach (var value in Enum.GetValues(typeof(NumberQueryType)))
                {
                    <BSDropdownItem @onclick="e => { Query.Type = (NumberQueryType)value; }">@value</BSDropdownItem>
                }
            </Content>
        </BSDropdown>
    </BSCol>
</BSRow>

