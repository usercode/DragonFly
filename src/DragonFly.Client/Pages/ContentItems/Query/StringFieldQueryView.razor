@inherits FieldQueryComponent<StringFieldQuery>

<BSRow>
	<BSCol>
		<input type="text" class="form-control" @bind-value="@Query.Pattern" />
	</BSCol>
	<BSCol ColumnLarge="auto">
		<BSDropdown>
			<Toggler>
				<BSToggle IsButton Color="@BSColor.Light">@Query.PatternType</BSToggle>
			</Toggler>
			<Content>
				@foreach(var value in Enum.GetValues(typeof(StringFieldQueryType)))
				{
					<BSDropdownItem @onclick="e => { Query.PatternType = (StringFieldQueryType)value; }">@value</BSDropdownItem>
				}
			</Content>
		</BSDropdown>
	</BSCol>		
</BSRow>

