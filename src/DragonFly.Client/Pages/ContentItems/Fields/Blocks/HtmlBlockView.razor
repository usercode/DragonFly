@inherits BlockComponent<HtmlBlock>

<div class="block html-block">
	<TinyMCE.Blazor.Editor 
			                Field="() => Block.HtmlText"
			                @bind-Value="Block.HtmlText" 
                            Conf="TinyMceConfiguration.Editor"
                            Disable="Field.IsReadOnly"/>   
</div>

@code {
    [CascadingParameter]
    public FieldComponent<BlockField> Field { get; set; }
}