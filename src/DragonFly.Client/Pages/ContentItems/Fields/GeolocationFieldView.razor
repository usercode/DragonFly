@inherits FieldComponent<GeolocationField, GeolocationFieldOptions>

<div class="geolocation-field">
    <div class="input-group">
        <span class="input-group-text">Latitude</span>
        <BSInput InputType="InputType.Text" @bind-Value="Field.Latitude" IsDisabled="IsReadOnly" />
        <span class="input-group-text">Longitude</span>
        <BSInput InputType="InputType.Text" @bind-Value="Field.Longitude" IsDisabled="IsReadOnly" />        
    </div>
</div>
