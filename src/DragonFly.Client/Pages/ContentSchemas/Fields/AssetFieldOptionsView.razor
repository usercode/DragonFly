@inherits FieldOptionsComponent<AssetFieldOptions>

<div class="card">
    <div class="card-body">
        <div class="card-title">
                    
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Required</label>
            <div class="col-sm-10">
                <CheckBoxView @bind-Value="@Options.IsRequired" />
            </div>
        </div>
        <BSRow class="form-group">
            <label class="col-sm-2 col-form-label">Searchable</label>
            <div class="col-sm-8">
                <CheckBoxView @bind-Value="@Options.IsSearchable" />
            </div>
        </BSRow>
         <BSRow class="form-group">
            <label class="col-sm-2 col-form-label">Show preview</label>
            <div class="col-sm-8">
                <CheckBoxView @bind-Value="@Options.ShowPreview" />
            </div>
        </BSRow>

    </div>
</div>