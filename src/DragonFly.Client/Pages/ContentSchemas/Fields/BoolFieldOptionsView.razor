@inherits FieldOptionsComponent<BoolFieldOptions>

<div class="card">
    <div class="card-body">
        <div class="card-title">
                    
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Required</label>
            <div class="col-sm-10">
                <MudCheckBox @bind-Value="@Options.IsRequired" />
            </div>
        </div>
        <BSRow class="form-group">
            <label class="col-sm-2 col-form-label">Index</label>
            <div class="col-sm-8">
                <MudCheckBox @bind-Value="@Options.HasIndex" />
            </div>
        </BSRow>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Default value</label>
            <div class="col-sm-10">
                <BoolValue @bind-Value="@Options.DefaultValue" AllowUnset="true" />
            </div>
        </div>
    </div>
</div>