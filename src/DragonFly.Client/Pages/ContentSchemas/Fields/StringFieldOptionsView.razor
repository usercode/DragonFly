@inherits FieldOptionsComponent<StringFieldOptions>

<BSCard>
    <BSCard CardType="CardType.Body">
        <BSCard CardType="CardType.Title">

        </BSCard>
        <BSRow class="form-group">
            <label class="col-sm-2 col-form-label">Required</label>
            <div class="col-sm-8">
                <BSInputCheckbox @bind-Value="@Options.IsRequired" />
            </div>
        </BSRow>
         <BSRow class="form-group">
            <label class="col-sm-2 col-form-label">Index</label>
            <div class="col-sm-8">
                <BSInputCheckbox @bind-Value="@Options.HasIndex" />
            </div>
        </BSRow>
        <BSRow class="form-group">
            <label class="col-sm-2 col-form-label">Default value</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" @bind-value="@Options.DefaultValue" />
            </div>
        </BSRow>
        <BSRow class="form-group">
            <label class="col-sm-2 col-form-label">Minimal length</label>
            <div class="col-sm-8">
                <input type="number" step="0.01" class="form-control" @bind-value="@Options.MinLength" />
            </div>
        </BSRow>
        <BSRow class="form-group">
            <label class="col-sm-2 col-form-label">Maximal length</label>
            <div class="col-sm-8">
                <input type="number" step="0.01" class="form-control" @bind-value="@Options.MaxLength" />
            </div>
        </BSRow>
    </BSCard>
</BSCard>