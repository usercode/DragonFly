<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>net6.0</TargetFramework>
	  <Nullable>enable</Nullable>
	  <Authors>usercode</Authors>
	  <PackageProjectUrl>https://github.com/usercode/DragonFly</PackageProjectUrl>
	  <Description>Headless CMS based on ASP.NET Core and Blazor</Description>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <Version>0.2.5</Version>
	  <PublishRepositoryUrl>true</PublishRepositoryUrl>
	  <PackageIcon>logo.png</PackageIcon>
	  <PackageTags>cms</PackageTags>
	  <IncludeSymbols>true</IncludeSymbols>
	  <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

	<ItemGroup>		
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\logo.png" Pack="true" PackagePath="" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="ImageWizard.Core" Version="3.2.0" />		
		<PackageReference Include="ImageWizard.DocNET" Version="3.2.0" />
		<PackageReference Include="ImageWizard.ImageSharp" Version="3.2.0" />
		<PackageReference Include="ImageWizard.SvgNet" Version="3.2.0" />
		<PackageReference Include="ImageWizard.Client" Version="3.2.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\DragonFly.AspNetCore\DragonFly.AspNetCore.csproj" />
	</ItemGroup>
</Project>
